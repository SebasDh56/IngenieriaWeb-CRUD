@model IngenieriaWeb1.Models.Autos

@{
    ViewData["Title"] = "Editar Auto";
}

<div class="my-5 container">
    <h1 class="display-5 fw-bold text-warning">
        <i class="fas fa-edit me-2"></i> Editar Auto
    </h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="AutoId" />

                        <div class="mb-3">
                            <label asp-for="Placa" class="form-label fw-bold"></label>
                            <input asp-for="Placa" class="form-control" />
                            <span asp-validation-for="Placa" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Marca" class="form-label fw-bold"></label>
                            <input asp-for="Marca" class="form-control" />
                            <span asp-validation-for="Marca" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Modelo" class="form-label fw-bold"></label>
                            <input asp-for="Modelo" class="form-control" />
                            <span asp-validation-for="Modelo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Propietario" class="form-label fw-bold"></label>
                            <input asp-for="Propietario" class="form-control" />
                            <span asp-validation-for="Propietario" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Año" class="form-label fw-bold"></label>
                            <input asp-for="Año" class="form-control" />
                            <span asp-validation-for="Año" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}