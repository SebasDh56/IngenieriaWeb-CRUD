@model IngenieriaWeb1.Models.Autos

@{
    ViewData["Title"] = "Eliminar Auto";
}

<div class="my-5 container">
    <h1 class="display-5 fw-bold text-danger">
        <i class="fas fa-trash-alt me-2"></i> Eliminar Auto
    </h1>
    <h3 class="text-muted">¿Estás seguro de que deseas eliminar este vehículo?</h3>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Placa)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Placa)</dd>
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Marca)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Marca)</dd>
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Modelo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Modelo)</dd>
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Propietario)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Propietario)</dd>
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Año)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Año)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-3">
                        <input type="hidden" asp-for="AutoId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i> Eliminar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>